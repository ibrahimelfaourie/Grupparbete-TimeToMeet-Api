<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserReservationActivity">

    <TextView
        android:id="@+id/txt_confirmation_room_name"
        android:layout_width="381dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Elite Palace Hotel"
        android:textColor="#FF9800"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_confirmation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="122dp"
        android:text="08:00 - 12:00"
        android:textColor="#E91E63"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_confirmation_price"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="173dp"
        android:text="9000 KR"
        android:textAlignment="textStart"
        android:textColor="#4CAF50"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="173dp"
        android:text="Price:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="21dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/calerndar" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="34dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="122dp"
        app:srcCompat="@drawable/clock" />

    <TextView
        android:id="@+id/txt_confirmation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="88dp"
        android:text="2020-05-30"
        android:textColor="#E91E63"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_reservation_confim"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="63dp"
        android:backgroundTint="#2FDA39"
        android:onClick="onClickBook"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>